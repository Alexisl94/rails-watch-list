<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1535016120720-40c646be5580?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OXx8Y2luZW1hfGVufDB8fDB8fHww&auto=format&fit=crop&w=400&q=60)">
  All your movies
</div>

<div class="d-flex justify-content-evenly">
  <% @lists.each do |list| %>
  <div class="card-product">
    <div class="card-product-infos">
      <h2><%= list.name %></h2>
      <p><%= link_to 'Check the list', list_path(list) %></p>
    </div>
  </div>
  <% end %>
</div>

<button class="btn btn-lg"><%= link_to 'Create a new list', new_list_path, class:'link' %></button>
<button class="btn btn-lg"><%= link_to 'My lists', lists_path, class:'link' %></button>

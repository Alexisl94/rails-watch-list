<h1>Une seule liste :</h1>

<%= @list.name %>

<h1>Ajouter un film et une list au bookmark</h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit "create", class: "btn btn-primary" %>
<% end %>
<% @list.bookmarks.each do |bookmark| %>
<h3><%= bookmark.movie.title %></h3>
<h4><%= bookmark.comment %></h4>
<%= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are u sure ?"}  %>
<% end %>
